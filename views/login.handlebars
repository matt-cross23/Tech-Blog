<div class="row">
  <div class="col-md-3">
    <h2>Login</h2>
    <form class="form login-form">
      <div class="form-group">
         <div class="mb-2">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
  </div>
      <div class="col g-3 align-items-center">
  <div class="col-auto">
    <label for="password-login" class="col-form-label">Password</label>
  </div>
  <div class="col-auto">
    <input type="password" id="password-login" class="form-control" aria-describedby="passwordHelpInline">
  </div>
</div>
<br>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="col-md-12">
    <h2>Signup</h2>
   <div class="signup-form">
        <div class="mb-2">
    <label for="name-signup" class="form-label">Name</label>
       <input class="form-input form-control" type="text" id="name-signup" />
      </div> 
      <div class="form-group">
        <div class="mb-2">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
  </div>
      <div class="col g-3 align-items-center">
  <div class="col-auto">
    <label for="password-signup" class="col-form-label">Password</label>
  </div>
  <div class="col-auto">
    <input type="password" id="password-signup" class="form-control" aria-describedby="passwordHelpInline">
  </div>
  <div class="col-auto">
    <span id="passwordHelpInline" class="form-text">
      Must be 8 characters long.
    </span>
  </div>
</div>

      <div class="form-group white-space: nowrap">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
